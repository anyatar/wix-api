    "version": "0.2.0",
    "configurations": [
    
        {
            "type": "node",
            "request": "launch",
            "name": "Debug wix app",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/server.ts",
            "outFiles": [
                "${workspaceFolder}/build/**/*.js"
            ],
            "runtimeArgs": ["--require", "ts-node/register", "--preserve-symlinks"]
        }
    ]
}